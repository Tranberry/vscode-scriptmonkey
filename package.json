{
	"name": "vscode-scriptmonkey",
	"displayName": "ScriptMonkey",
	"description": "UserScript language support for vscode",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.69.0"
	},
	"categories": [
		"Programming Languages"
	],
	"keywords": [
		"userscript",
		"Tampermonkey",
		"Greasemonkey",
		"Violentmonkey"
	],
	"activationEvents": [
		"onCommand:vscode-scriptmonkey.helloWorld",
		"onLanguage:javascript"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "vscode-scriptmonkey.helloWorld",
				"title": "Hello World"
			}
		],
		"grammars": [
			{
				"scopeName": "text.userjs",
				"path": "./syntaxes/userjs.tmLanguage.json",
				"injectTo": [
					"source.js",
					"source.mjs",
					"source.ts",
					"source.jsx",
					"source.tsx",
					"source.ts",
					"source.tsc",
					"source.tsx"
				]
			}
		],
		"snippets": [
			{
				"language": "javascript",
				"path": "./snippets/snippets.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.69.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "16.x",
		"@typescript-eslint/eslint-plugin": "^5.30.0",
		"@typescript-eslint/parser": "^5.30.0",
		"eslint": "^8.18.0",
		"glob": "^8.0.3",
		"mocha": "^10.0.0",
		"typescript": "^4.7.4",
		"@vscode/test-electron": "^2.1.5"
	}
}